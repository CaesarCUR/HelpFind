<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/colorBroadBack">

    <!--User port-->
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorBroadCard"
        android:layout_marginBottom="4dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView android:id="@+id/img_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/cata"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:layout_weight="1"/>

        <EditText android:id="@+id/input_broadcast"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"
            android:hint="Distribute your finding..."
            android:textColorHint="#d7bfbf"
            android:paddingLeft="10dp"
            android:textSize="12sp"
            android:background="@null"/>

        <ImageView android:id="@+id/img_write"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:src="@drawable/write64"
            android:layout_weight="1"/>

        <ImageView android:id="@+id/img_camera"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:src="@drawable/camera64"
            android:layout_weight="1"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_nearby"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="1dp" />

</LinearLayout>